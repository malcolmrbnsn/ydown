<div class="container">
    <video width="100%" controls>
        <source src="/video/{{video.videoId}}.mp4" />
    </video>
    <h1>{{video.title}} <a href="/videos/{{video._id}}/watched" class="btn btn-success">Mark watched</a></h1>
    <h2>{{video.channelauthor}}</h2>
    <p>{{splitLines video.description}}</p>
</div>