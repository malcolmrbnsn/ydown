<div class="container">
    <h1>Library</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each videos}}
        <div class="col">
            <div class="card">
                <a class="card-img-top" href="/videos/{{this._id}}">
                    <img src="/thumbnail/{{this.videoId}}.png" class="card-img-top" alt="">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h6 class="card-subtitle">{{#if this.downloaded}}{{#if this.watched}}Watched
                        {{else}}Downloaded{{/if}}
                        {{else}}Download Scheduled{{/if}}</h6>
                    <a href="/videos/{{this._id}}" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


